---
apiVersion: v1
kind: Secret
metadata:
  name: "{{ ansible_operator_meta.name }}-server"
  namespace: "{{ ansible_operator_meta.namespace }}"
stringData:
  settings.py: |
    {% for setting, value in pulp_combined_settings.items() %}
    {{ setting | upper }} = {{ value | to_json if value | type_debug in ["str","AnsibleUnicode"] and not value | regex_search("\(\)$") else value }}
    {% endfor %}
